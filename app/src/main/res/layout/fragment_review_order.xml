<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.impl.ReviewOrderFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/review_order_header" />

        <include layout="@layout/review_enterprise_content" />

        <include layout="@layout/review_order_vendor_content" />

        <include layout="@layout/review_order_client_content" />

        <include layout="@layout/review_order_product_content" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
