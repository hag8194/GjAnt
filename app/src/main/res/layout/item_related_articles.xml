<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="160dp"
    android:layout_width="85dp">

    <ImageView
        app:srcCompat="@color/colorAccent"
        android:id="@+id/children_product_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/children_product_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="Child Product Name"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="@+id/children_product_image"
        app:layout_constraintLeft_toLeftOf="@+id/children_product_image"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/children_product_image" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/children_product_price"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toBottomOf="@+id/children_product_name"
        android:layout_marginTop="8dp"
        tools:text="$ 1.000.000,00"
        android:textStyle="normal|bold"
        app:layout_constraintRight_toRightOf="@+id/children_product_name"
        app:layout_constraintLeft_toLeftOf="@+id/children_product_name" />
</android.support.constraint.ConstraintLayout>