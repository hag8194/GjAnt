<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.impl.ClientDetailFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.impl.ClientDetailFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_business_black_32dp"
                android:id="@+id/imageView3"
                tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/client_fullname"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:text="Fullname"
                tools:layout_editor_absoluteY="24dp"
                tools:layout_editor_absoluteX="76dp"
                android:padding="8dp" />
        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_assignment_ind_black_32dp"
            android:id="@+id/imageView4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_identification"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:text="Identification"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView4"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_contact_phone_black_32dp"
            android:id="@+id/imageView5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/client_identification"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_phone1"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView5"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:text="Phone1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_local_phone_black_24dp"
            android:id="@+id/imageView6"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/client_phone1"
            app:layout_constraintLeft_toLeftOf="@+id/imageView5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_phone2"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView6"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:text="Phone2" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/client_phone2"
            app:layout_constraintLeft_toLeftOf="@+id/imageView6"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp">

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_person_pin_black_24dp"
            android:id="@+id/imageView9"
            tools:layout_editor_absoluteY="226dp"
            tools:layout_editor_absoluteX="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/client_address"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                tools:text="Address"
                tools:layout_editor_absoluteY="235dp"
                tools:layout_editor_absoluteX="76dp"
                android:padding="8dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_credit_card_black_32dp"
            android:id="@+id/imageView7"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_limit_credit"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView7"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:text="Credit limit" />

        <TextView
            android:text="@string/bs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/client_limit_credit"
            android:layout_marginStart="4dp"
            app:layout_constraintLeft_toRightOf="@+id/client_limit_credit"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/client_limit_credit"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_today_black_32dp"
            android:id="@+id/imageView8"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            app:layout_constraintLeft_toLeftOf="@+id/imageView7" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/client_created_at"
            app:layout_constraintTop_toTopOf="@+id/imageView8"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView8"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"
            tools:text="Created at" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>